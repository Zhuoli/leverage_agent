{
  "name": "atlassian-ai-assistant",
  "version": "3.0.0",
  "description": "AI-powered chatbot assistant for Jira and Confluence",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "rm -rf backend-dist && cp -r ../dist backend-dist && cp -r ../.claude .claude-skills",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "cd .. && npm run build"
  },
  "keywords": [
    "atlassian",
    "jira",
    "confluence",
    "ai",
    "chatbot",
    "assistant",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhuoli/confluence_assistant"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "marked": "^11.0.0"
  },
  "build": {
    "appId": "com.atlassian.ai.assistant",
    "productName": "Atlassian AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "backend-dist/**/*.js",
      "backend-dist/**/*.js.map",
      ".claude-skills/**/*",
      {
        "from": "../node_modules",
        "to": "node_modules",
        "filter": [
          "@anthropic-ai/**/*",
          "@modelcontextprotocol/**/*",
          "openai/**/*",
          "axios/**/*",
          "axios-retry/**/*",
          "zod/**/*",
          "commander/**/*",
          "chalk/**/*",
          "ora/**/*",
          "gray-matter/**/*",
          "pino/**/*",
          "dotenv/**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "zip",
          "arch": ["arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "asar": true
  }
}
