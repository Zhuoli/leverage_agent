{
  "name": "atlassian-ai-assistant",
  "version": "3.0.0",
  "description": "AI-powered chatbot assistant for Jira and Confluence",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:renderer && electron .",
    "dev": "npm run build:renderer && electron . --dev",
    "build:renderer": "tsc",
    "watch:renderer": "tsc --watch",
    "prebuild": "npm run build:renderer && rm -rf backend-dist .claude && cp -r ../dist backend-dist && cp ../backend-package.json backend-dist/package.json && cd backend-dist && npm install && cd .. && cp -r ../.claude .claude || true",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "cd .. && npm run build"
  },
  "keywords": [
    "atlassian",
    "jira",
    "confluence",
    "ai",
    "chatbot",
    "assistant",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhuoli/confluence_assistant"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^25.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.12.18"
  },
  "build": {
    "appId": "com.atlassian.ai.assistant",
    "productName": "Atlassian AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json",
      "backend-dist/**/*",
      ".claude/**/*",
      {
        "from": "../node_modules",
        "to": "node_modules"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "asar": false
  }
}
